<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="35dp"
        android:gravity="top"
        android:text=""
        android:textAppearance="@style/time" />


    <View
        android:id="@+id/event1_ball"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/start_time"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42.2dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ball" />


    <!-- Line -->
    <View
        android:id="@+id/line_1"
        android:layout_width="40.5dp"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/event1_ball"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/line"
        android:rotation="90" />

    <!-- event1 -->


    <!-- Star  -->
    <TextView
        android:id="@+id/event"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/event1_ball"
        android:layout_alignParentStart="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:text="place Holder"
        android:textAppearance="@style/eventsStyle" />

    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/event"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:background="#00ffffff"
        android:src="@drawable/star" />

    <!--    android:onClick="onToggleStar"-->

</RelativeLayout>